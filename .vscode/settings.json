{   // LaTeX Workshop
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": true,
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "pythontex",
            "command": "pythontex",
            "args": [
                "--interpreter",
                "\"python:/Users/willbarnes/anaconda/envs/dissertation/bin/python\"",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "makeindex-nomencl",
            "command": "makeindex",
            "args": [
                "%DOCFILE%.nlo",
                "-s",
                "nomencl.ist",
                "-o",
                "%DOCFILE%.nls"
            ]
        },
        {
            "name": "makeindex-aux",
            "command": "makeindex",
            "args": [
                "%DOCFILE%.aux",
            ]
        },
        {
            "name": "makeindex-idx",
            "command": "makeindex",
            "args": [
                "%DOCFILE%.idx"
            ]
        },
      ],
    "latex-workshop.latex.recipes": [
    {
        "name": "pdflatex->pytex->bibtex->pdflatex*2",
        "tools": [
            "pdflatex",
            "pythontex",
            "bibtex",
            "makeindex-aux",
            "makeindex-idx",
            "makeindex-nomencl",
            "pdflatex",
            "makeindex-nomencl",
            "pdflatex"
        ]
    }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.ilg",
        "*.nlo",
        "*.nls",
        "*synctex.gz",
        "pythontex-files-*/*.pytxmcr",
        "pythontex-files-*/*.pytxpyg",
        "pythontex-files-*/pythontex_data.pkl",
        "*.pytxcode",
        "*/*.aux",
        "*/figures/Chapter*-Figure*",
    ],
    // Spell Checker
    "cSpell.enabledLanguageIds": [
        "markdown",
        "latex"
    ],
    "python.unitTest.promptToConfigure": false,
    "python.unitTest.pyTestEnabled": false,
    "python.unitTest.unittestEnabled": false,
    "python.unitTest.nosetestsEnabled": false,
}