  number = {2},
  journal = {The Astrophysical Journal},
  author = {Yu, Xixi and Del Zanna, Giulio and Stenning, David C. and {Cisewski-Kehe}, Jessi and Kashyap, Vinay L. and Stein, Nathan and {van Dyk}, David A. and Warren, Harry P. and Weber, Mark A.},
