  author = {Badnell, N. R. and O'Mullane, M. G. and Summers, H. P. and Altun, Z. and Bautista, M. A. and Colgan, J. and Gorczyca, T. W. and Mitnik, D. M. and Pindzola, M. S. and Zatsarinny, O.},
