  author = {Kashyap, Vinay and Drake, Jeremy J.},
  month = aug,
  year = {1998},
  keywords = {ATOMIC PROCESSES,Atomic Processes,RADIATIVE TRANSFER,SUN: CORONA,SUN: UV RADIATION,Sun: Corona,Sun: UV Radiation},
  pages = {450-466},
  file = {/Users/willbarnes/Google Drive/School/Papers/Kashyap_Drake_1998.pdf}
}

