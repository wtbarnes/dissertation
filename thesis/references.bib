@article{kashyap_markov-chain_1998,
  title = {Markov-{{Chain Monte Carlo Reconstruction}} of {{Emission Measure Distributions}}: {{Application}} to {{Solar Extreme}}-{{Ultraviolet Spectra}}},
  volume = {503},
